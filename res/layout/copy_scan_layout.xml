<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/black_matte_background"
    tools:context="ssk.project.studiodemo.MainActivity$SoundFragment" >

    <Button
        android:id="@+id/button_black_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_button_custom"
        android:textColor="#FFFFFF"
        android:text="@string/button_black_copy"
        android:drawableRight="@drawable/icon_black_print" />

    <Button
        android:id="@+id/button_color_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_button_custom"
        android:drawableRight="@drawable/icon_color_print"
        android:text="@string/button_color_copy" />

    <Button
        android:id="@+id/button_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_custom"
        android:text="@string/button_scan"
        android:drawableRight="@drawable/icon_scan" />

    <TextView
        android:id="@+id/tv_black_ink_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="@string/tv_black_ink_level" />

    <ProgressBar
        android:id="@+id/progress_bar_black_ink"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="73"
        android:progressDrawable="@drawable/progress_bar_black_ink_coloring"
        android:secondaryProgress="100" />

    <TextView
        android:id="@+id/tv_color_ink_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="@string/tv_color_ink_level" />

    <ProgressBar
        android:id="@+id/progress_bar_color_ink"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="43"
        android:progressDrawable="@drawable/progress_bar_color_ink_coloring"
        android:secondaryProgress="100" />
    
    <TextView
        android:id="@+id/tv_tray_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="@string/tv_tray_select" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="#FFF"
            android:text="@string/tv_tray_select_1" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="@string/tv_tray_select_2" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="@string/tv_tray_select_3" />
    </RadioGroup>
    
    <TextView
        android:id="@+id/tv_quantity_copies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="@string/tv_quantity_copies" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#FFF"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    
    <RelativeLayout
    	android:layout_width="fill_parent"
   		android:layout_height="wrap_content"   
   		android:orientation="horizontal" >

	    <Button
	        android:id="@+id/button_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/green_button_custom"
	        android:text="@string/button_start" />
    
    </RelativeLayout>

</LinearLayout>